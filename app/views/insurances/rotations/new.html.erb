        <div class="panel-title">
	        <span class="glyphicon glyphicon-retweet">  New Rotation for <%= @insurance.fullname %></span>    
        </div>
      </div>
        <div class="panel-body">
          <div class="col-sm-1">
	        	<h1><span class="glyphicon glyphicon-plus"></span></h1> 
          </div> <!--/col-sm-1-->

          <div class="col-sm-11">
            <% if duplicate_rotation.nil? %>
              <%= render 'form' %>
            <% else %>
              <%= render 'form', duplicate_rotation: duplicate_rotation %><!--param from controller-->
            <% end %>
          </div> <!--/col-sm-11 col-sm-offset-1-->
    
        </div>
    </div> <!-- /panel -->
  </div> <!-- /col-sm-12-->
</div> <!-- /row -->

