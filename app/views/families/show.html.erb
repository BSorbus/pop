<br>

<ol class="breadcrumb">
  <li><%= link_to @family.company.short, company_path(@family.company_id), 
                      :"data-toggle" => "popover_info",
                      :"title" => "#{@family.company.short}",
                      :"data-content" => "#{@family.company.for_popover_data}",
                      :"data-placement" => "bottom" %></a></li>
  <li class="active"><%= @family.number %></li>
</ol> <!-- /breadcrumb -->

<div class="panel-group" id="myaccordion">

  <!-- Dane -->
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-family">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_data" >
              <span class="glyphicon glyphicon-file">  <%= @family.fullname %></span>    
              <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
            </a>
          </div>
        </div>
        <div id="collapse_data" class="panel-collapse collapse in"> <!-- id="collapse_data" -->
          <div class="panel-body">
            <div class="col-sm-1">
              <% if @family.family_lock %>
                <h1><span class="glyphicon glyphicon-lock"></span></h1>
              <% end %>
            </div>
            <div class="col-sm-11">

              <%= render 'form_show', input_disabled: true %>
              
            </div> <!--/col-sm-11-->
          </div>
        </div> <!-- /id="collapse_data" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-12-->
  </div> <!-- /row -->

  <!-- Rotacje -->
  <div class="row">
    <div class="col-sm-11 col-sm-offset-1">
      <div class="panel panel-rotation">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_family_rotations" >
              <span class="glyphicon glyphicon-retweet"> Rotacje</span>    
              <i class="indicator glyphicon glyphicon-chevron-right  pull-right"></i>
            </a>
          </div>
        </div>
        <div id="collapse_family_rotations" class="panel-collapse collapse"> <!-- id="collapse_rotations" -->
          <div class="panel-body">
            <div class="col-sm-12">

              <%= render 'families/family_rotations' %>

            </div> <!--/class="col-sm-12" -->
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_rotations" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-11 col-sm-offset-1 -->
  </div> <!-- /row -->


  <!-- Wydruki -->
  <% if @family.family_coverages.present? %>
    <div class="row">
      <div class="col-sm-11 col-sm-offset-1">
        <div class="panel panel-print">
          <div class="panel-heading">
            <div class="panel-title">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_scan_and_print" >
                <span class="glyphicon glyphicon-print"> Wydruki</span>    
                <i class="indicator glyphicon glyphicon-chevron-right  pull-right"></i>
              </a>
            </div>
          </div>
          <div id="collapse_scan_and_print" class="panel-collapse collapse"> <!-- id="collapse_scan_and_print" -->
            <div class="panel-body">
              <div class="col-sm-12">

                <%= render 'scan_and_print' %>

              </div> <!--/class="col-sm-12" -->
            </div> <!-- /panel-body -->
          </div> <!-- /id="collapse_scan_and_print" -->
        </div> <!-- /panel -->
      </div> <!-- /col-sm-11 col-sm-offset-1 -->
    </div> <!-- /row -->
  <% end %>  

  <%= render partial: "documents/documents_in_panel", locals: {documentable: @family} %>

</div> <!-- /class="panel-group" id="myaccordion" -->
