  <div class="col-sm-12">
    <div class="panel panel-coverage">
      <div class="panel-heading">
        <div class="panel-title">
          <span class="glyphicon glyphicon-calenar"><%= @coverage.fullname %></span>    
        </div>
      </div>
        <div class="panel-body">
          <div class="col-sm-1">
            <h1><span class="glyphicon glyphicon-edit"></span></h1> 
          </div> <!--/col-sm-1-->

          <div class="col-sm-11">
            <%= render 'form', back_url: back_url %><!--param from controller-->
          </div> <!--/col-sm-11 col-sm-offset-1-->
    
        </div>
    </div> <!-- /panel -->
  </div> <!-- /col-sm-12-->
</div> <!-- /row -->

