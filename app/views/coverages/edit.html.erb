<ol class="breadcrumb">
  <li><%= link_to @coverage.rotation.insurance.company.short, company_path(@coverage.rotation.insurance.company_id), 
                      :"data-toggle" => "popover_info",
                      :"title" => "#{@coverage.rotation.insurance.company.short}",
                      :"data-content" => "#{@coverage.rotation.insurance.company.for_popover_data}",
                      :"data-placement" => "bottom" %></a></li>
  <li><%= link_to @coverage.rotation.insurance.number, insurance_path(@coverage.rotation.insurance_id), 
                      :"data-toggle" => "popover_info",
                      :"title" => "#{@coverage.rotation.insurance.number}",
                      :"data-content" => "#{@coverage.rotation.insurance.for_popover_data}",
                      :"data-placement" => "bottom" %></a></li>
  <li><%= link_to @coverage.rotation.fullname, 
    insurance_rotation_path(@coverage.rotation.insurance_id, @coverage.rotation_id) %></a></li>
  <li class="active"><%= @coverage.fullname %></li>
</ol> <!-- /breadcrumb -->


